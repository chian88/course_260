<div id="cover"></div>
<div id="card">
  <a href="" class="close"></a>
  <section>
    <h4>{{card.title}}</h4>
    <small>in list <a href="#">{{list.title}}</a> <span class="subscribed"></span></small>
    <dl>
      <dt>Labels</dt>
      <dd>
        <ul class="labels">
          {{#each card.labels}}
          <li class="card_label" data-id={{this.id}} style="background: {{#find_color this.id ../card.color_selection}}{{/find_color}}">{{#find_title this.id ../card.color_selection}}{{/find_title}}</li>
          {{/each}}
          <li class="add_label card_label"></li>

        </ul>
      </dd>
    </dl>

    {{#detailSchedule card.due}}

    {{/detailSchedule}}


    <dl id="description">
      <dt>Description <a href="#">Edit</a></dt>
      <dd>{{card.description}}</dd>
    </dl>

    <h5 id="add_comment">Add Comment</h5>

    <div id="textarea">
      <textarea placeholder="Write a comment.."></textarea>
    </div>
    <input type="button" value="Save">

    <h5 id="activity">Activity</h5>
    <ul id="comment">
      {{#each card.comments}}
      <li>
        <h6>Chian Yee Lee</h6>
        <p>{{this}}</p>
        <small>3 minutes ago - <a href="#">Edit</a> <a href="#">Delete</a></small>
      </li>
      {{/each}}
    </ul>
  </section>
  <nav>
    <h5>Add</h5>
      <ul>
        <li id="label">Labels</li>
        <li id="due">Due Date</li>
      </ul>

    <h5>Actions</h5>
      <ul>
        <li id="move">Move</li>
        <li id="copy">Copy</li>
        <li id="subscribe">Subscribe</li>
        <li id="archive">Archive</li>
      </ul>
  </nav>
</div>
